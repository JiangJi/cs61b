
public class Test {
    public static void main(String[] args)
    {
        int N = 100;
        StdDraw.setXscale(0,N);
        StdDraw.setYscale(0,N*N);
        StdDraw.setPenColor(StdDraw.RED);
        StdDraw.setPenRadius(0.01);
        for(int i=0;i<N;i++)
        {
            StdDraw.clear();
            StdDraw.point(i, i);
            StdDraw.point(i, i*i);
            StdDraw.point(i, i*Math.log(i));
        }
        StdDraw.clear();
        for(int i=0;i<N;i++)
        {
            StdDraw.show(10);
            StdDraw.point(i, i);
            StdDraw.point(i, i*i);
            StdDraw.point(i, i*Math.log(i));
        }
    }
}
